<!DOCTYPE html>
<html>

	<% include header %>
	
	<body>
	
		<main class="wrapper">

			<% include nav %>



					<!-- Carousel
		    ================================================== -->
		    <div id="myCarousel" class="carousel slide" data-ride="carousel">
		      <!-- Indicators -->
		      <ol class="carousel-indicators">
		        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		        <li data-target="#myCarousel" data-slide-to="1"></li>
		        <li data-target="#myCarousel" data-slide-to="2"></li>
		      </ol>
		      <div class="carousel-inner" role="listbox">
		        <div class="item active">
		          <img class="first-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="First slide">
		          <div class="container">
		            <div class="carousel-caption">

						<div class="container" id="connect">
							<form class="form-signin"  method="post" action="/">
								<h2 class="form-signin-heading">Se connecter: </h2>
								<label class="sr-only" for="login">Login</label>
								<input class="form-control" type="text" id="login" name="login" placeholder="Login" value="" required>
								<span>Entre 5 et 10 caractères!</span>
								<label class="sr-only" for="password">Mot De Passe</label>
								<input class="form-control" type="password" id="password" name="password" placeholder="Password" value="" required>
								<span>Entre 5 et 10 caractères et au moins une lettre et un chiffre!</span>
								<button class="btn btn-lg btn-primary btn-block" type="submit" id="submit" name="submit" value="connect">Se connecter</button>
							</form>
						</div>

					</div>
				  </div>
				</div>

					  <div class="item">
		          		<img class="second-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Second slide">
		          		<div class="container">
		            		<div class="carousel-caption">

								<div class="container" id="create">
									<form class="form-signin" method="post" action="/">
										<h2 class="form-signin-heading">Créer un compte: </h2>
										<label class="sr-only" for="email">Email</label>
										<input class="form-control" type="email" id="email" name="email" value="" placeholder="adresse@email.com" required>
										<label class="sr-only" for="login">Login</label>
										<input class="form-control" type="text" id="login" name="login" placeholder="Login" value="" required>
										<span>Entre 5 et 10 caractères!</span>
										<label class="sr-only" for="name">Nom</label>
										<input class="form-control" type="text" id="name" name="name" placeholder="Nom" value="" required>
										<label class="sr-only" for="firstname">Prénom</label>
										<input class="form-control" type="text" id="firstname" name="firstname" placeholder="Prénom" value="" required>
										<label class="sr-only" for="password">Mot De Passe</label>
										<input class="form-control" type="password" id="password" name="password" placeholder="Password" value="" required>
										<span>Entre 5 et 10 caractères et au moins une lettre et un chiffre!</span>
										<button class="btn btn-lg btn-primary btn-block" type="submit" id="submit" name="submit" value="create">Créer un compte</button>
									</form>
								</div>

							</div>
						</div>
					  </div>

					  <div class="item">
		          		<img class="third-slide" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Third slide">
		          		<div class="container">
		            		<div class="carousel-caption">

								<div class="container" id="forgotten">
									<form class="form-signin"  method="post" action="/">
										<h2 class="form-signin-heading">Mot de passe oublié? </h2>
										<label class="sr-only" for="login">Email</label>
										<input class="form-control" type="email" id="email" name="email" value="" placeholder="adresse@email.com" required>
										<button class="btn btn-lg btn-primary btn-block" type="submit" id="submit" name="submit" value="forgotten">Mail de réinitialisation</button>
									</form>
								</div>

							</div>
						</div>
					</div>
				</div>
				<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		        	<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		        	<span class="sr-only">Previous</span>
		     	</a>
		      	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		        	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		        	<span class="sr-only">Next</span>
		      	</a>
		    </div><!-- /.carousel -->

			<div class="container">
				<% if (locals.error) { %>
				<div class="alert alert-danger alert-dismissible" role="alert">
						<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
						<%= error %>
				</div>
				<%}%>
			</div>
		</main>

		<script type="text/javascript">
			$('#login').on('focus', function() {
				$('#login').append('<span>(entre 5 et 10 caractères)</span>');
			})
		</script>

		<%	include footer %>

	</body>

</html>